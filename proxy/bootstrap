#!/bin/bash

# Find Node.js path
NODE_PATH=""

for path in /opt/nodejs20/bin/node /opt/nodejs18/bin/node /usr/local/bin/node /usr/bin/node; do
    if [ -x "$path" ]; then
        NODE_PATH="$path"
        break
    fi
done

if [ -z "$NODE_PATH" ]; then
    echo "Error: Node.js not found"
    exit 1
fi

echo "Using Node.js: $NODE_PATH"
exec "$NODE_PATH" index.js
