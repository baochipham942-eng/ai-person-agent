model Organization {
  id          String       @id @default(cuid())
  name        String
  nameZh      String?
  type        String
  wikidataQid String?      @unique
  description String?
  roles       PersonRole[]

  @@index([name])
  @@index([wikidataQid])
}

model PersonRole {
  id             String       @id @default(cuid())
  personId       String
  organizationId String
  role           String
  roleZh         String?
  startDate      DateTime?
  endDate        DateTime?
  source         String       @default("wikidata")
  confidence     Float        @default(1.0)
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  person         People       @relation(fields: [personId], references: [id], onDelete: Cascade)

  @@unique([personId, organizationId, role, startDate])
  @@index([personId])
  @@index([organizationId])
}

model Card {
  id         String   @id @default(cuid())
  personId   String
  type       String
  title      String
  content    String
  tags       String[]
  sourceUrl  String?
  importance Int      @default(5)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  person     People   @relation(fields: [personId], references: [id], onDelete: Cascade)

  @@index([personId])
  @@index([type])
}

model RawPoolItem {
  id          String    @id @default(cuid())
  personId    String
  sourceType  String
  url         String
  urlHash     String    @unique
  contentHash String
  title       String
  text        String
  publishedAt DateTime?
  metadata    Json?
  fetchStatus String    @default("success")
  errorCode   String?
  fetchedAt   DateTime  @default(now())
  processed   Boolean   @default(false)
  person      People    @relation(fields: [personId], references: [id], onDelete: Cascade)

  @@index([personId])
  @@index([sourceType])
}

model SearchSession {
  id                 String    @id @default(cuid())
  userId             String?
  query              String
  localHits          String[]
  wikidataCandidates Json?
  status             String    @default("pending")
  confirmedPersonId  String?
  createdAt          DateTime  @default(now())
  resolvedAt         DateTime?
  confirmedPerson    People?   @relation(fields: [confirmedPersonId], references: [id])
  user               User?     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([createdAt])
}

model UserProfile {
  id                  String   @id @default(cuid())
  userId              String   @unique
  peopleInterests     Json     @default("{}")
  topicInterests      Json     @default("{}")
  readCards           String[]
  savedCards          String[]
  subscribedPeople    String[]
  newsletterFrequency String   @default("none")
  newsletterEmail     String?
  lastActiveAt        DateTime @default(now())
  updatedAt           DateTime @updatedAt
  user                User     @relation(fields: [userId], references: [id])
}

